{
  "extends": "@zcloak/dev/config/tsconfig.json",
  "compilerOptions": {
    "composite": true,
    "jsx": "react-jsx",
    "paths": {
      "@zcloak/login-verify": ["verify/src"],
      "@zcloak/login-verify/*": ["verify/src/*"],
      "@zcloak/login-providers": ["providers/src"],
      "@zcloak/login-providers/*": ["providers/src/*"],
      "@zcloak/login-rpc": ["rpc/src"],
      "@zcloak/login-rpc/*": ["rpc/src/*"],
      "@zcloak/login-rpc-defines": ["rpc-defines/src"],
      "@zcloak/login-rpc-defines/*": ["rpc-defines/src/*"],
    },
    "skipLibCheck": true,
    "resolveJsonModule": true
  }
}
